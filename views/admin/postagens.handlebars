<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/addpostagem"><button type="button" class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
    <div class="card mt-2">
        <div Class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary mt-3">Editar postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagem</button></a>
        </div>
    </div>
{{else}}
   <h4 class="mt-4">Nenhuma postagem registrada.</h4>
{{/each}}